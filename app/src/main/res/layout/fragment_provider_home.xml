<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProviderHomeFragment"
    android:padding="32dp"
    android:background="@drawable/nana_service_home">

    <RelativeLayout
        android:id="@+id/provider_home_photo_area"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/provider_home_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/image__5"
            android:padding="2dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners_mask"
            android:backgroundTint="@color/colorPrimaryDark"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/provider_home_name"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Service Provider Name"
        app:layout_constraintTop_toBottomOf="@id/provider_home_photo_area"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/provider_home_location"
        android:text="Service Provider Location"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/provider_home_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/provider_home_settings_link"
        android:text="Settings"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/provider_home_location"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/provider_home_notifications_link"
        android:text="Notifications"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/provider_home_settings_link"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/provider_home_profile_link"
        android:text="Profile"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/provider_home_notifications_link"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/provider_home_requests_link"
        android:text="Requests"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/provider_home_profile_link"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/provider_home_logout_link"
        android:text="Logout"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/provider_home_requests_link"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>